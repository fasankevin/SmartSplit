<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <!-- Title -->
    <TextView
        android:id="@+id/titleTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Bill Splitter"
        android:textSize="24sp"
        android:textStyle="bold"
        android:gravity="center"
        android:paddingBottom="16dp" />

    <!-- Bill Amount -->
    <EditText
        android:id="@+id/billAmountEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter total bill amount"
        android:inputType="numberDecimal"
        android:padding="8dp" />

    <!-- Number of People -->
    <EditText
        android:id="@+id/numPeopleEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter number of people"
        android:inputType="number"
        android:padding="8dp"
        android:layout_marginTop="8dp" />

    <!-- Tip Percentage -->
    <EditText
        android:id="@+id/tipPercentageEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter tip percentage (optional)"
        android:inputType="numberDecimal"
        android:padding="8dp"
        android:layout_marginTop="8dp" />

    <!-- Calculate Button -->
    <Button
        android:id="@+id/calculateButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Calculate"
        android:layout_marginTop="16dp"
        android:padding="12dp" />

    <!-- Result Display -->
    <TextView
        android:id="@+id/resultTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Result will be displayed here"
        android:textSize="16sp"
        android:textStyle="bold"
        android:paddingTop="16dp"
        android:gravity="center"
        android:layout_marginTop="8dp" />
</LinearLayout>

